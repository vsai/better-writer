{
  "manifest_version": 2,
  "name": "BetterWriter.ai",
  "version": "0.1",
  "description": "Select text and generate alternative suggestions.",
  "options_page": "options_page/options_page.html",
  "content_scripts": [{
    "run_at": "document_end",
    "matches": ["<all_urls>"],
    "js": ["highlighter/highlighter.js"]
  }],
  "browser_action": {
    "default_icon": "assets/icon.png"
  },
  "icons": {
    "128": "assets/icon.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
